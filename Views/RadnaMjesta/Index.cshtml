@model List<HR_menager.Models.RadnoMjesto>

@{
    ViewData["Title"] = "Popis radnih mjesta";
}

<h2>Popis radnih mjesta</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Naziv</th>
            <th>Odjel</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var radnoMjesto in Model)
        {
            <tr>
                <td>@radnoMjesto.Naziv</td>
                <td>
                    @if (radnoMjesto.OdjelId.HasValue)
                    {
                        @ViewBag.Odjeli[radnoMjesto.OdjelId.Value]
                    }
                    else
                    {
                        <span class="text-danger">Bez odjela</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@radnoMjesto.Id" class="btn btn-primary btn-sm">Uredi</a>
                    <a asp-action="Delete" asp-route-id="@radnoMjesto.Id" class="btn btn-danger btn-sm">Izbriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Dodaj novo radno mjesto</a>