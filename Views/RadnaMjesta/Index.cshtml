@model IEnumerable<HR_menager.Models.RadnoMjesto>

@{
    ViewData["Title"] = "Popis radnih mjesta";
}

<h2>Popis radnih mjesta</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Naziv</th>
            <th>Odjel</th>
            <th>Akcije</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rm in Model)
        {
            <tr>
                <td>@rm.Id</td>
                <td>@rm.Naziv</td>
                <td>@ViewBag.Odjeli[rm.OdjelId]</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@rm.Id" class="btn btn-primary btn-sm">Uredi</a>
                    <a asp-action="Delete" asp-route-id="@rm.Id" class="btn btn-danger btn-sm">Izbriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Dodaj novo radno mjesto</a>